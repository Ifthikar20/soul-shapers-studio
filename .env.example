# API Configuration
VITE_API_URL=http://localhost:8000

# Application Mode
# Set to 'true' to enable construction/maintenance mode
VITE_CONSTRUCTION_MODE=false

# Set to 'true' to show only newsletter signup page
VITE_NEWSLETTER_ONLY_MODE=false

# Community Stories Feature
# Set to 'false' to disable user story posting on Read/Community page
# When disabled, users can only view stories but cannot create new ones
VITE_ENABLE_STORY_POSTING=true
