# ==============================================
# Backend Environment Variables for Encryption
# ==============================================
# Copy this to .env and update with your actual values
# NEVER commit .env to version control!

# ==============================================
# ENCRYPTION KEYS (MUST MATCH FRONTEND!)
# ==============================================

# AES-256-GCM Encryption Key (256-bit / 32 bytes)
# MUST match VITE_API_ENCRYPTION_KEY in frontend
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_ENCRYPTION_KEY=your-encryption-key-here-must-match-frontend

# HMAC-SHA256 Signing Key (256-bit / 32 bytes)
# MUST match VITE_API_HMAC_KEY in frontend
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_HMAC_KEY=your-hmac-key-here-must-match-frontend

# Enable/disable encryption
# Set to "false" for local development without encryption
# MUST be "true" in production
API_ENCRYPTION_ENABLED=true

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL=postgresql://user:password@localhost:5432/betterbliss
DATABASE_POOL_SIZE=10

# ==============================================
# AWS CONFIGURATION
# ==============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret

# AWS Cognito
COGNITO_USER_POOL_ID=us-east-1_xxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_REGION=us-east-1

# AWS S3
S3_BUCKET_NAME=betterbliss-content
S3_REGION=us-east-1

# CloudFront
CLOUDFRONT_DOMAIN=d1234567890.cloudfront.net
CLOUDFRONT_KEY_PAIR_ID=K1234567890ABC

# ==============================================
# API CONFIGURATION
# ==============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# CORS Origins (comma-separated)
CORS_ORIGINS=https://betterandbliss.com,https://www.betterandbliss.com,http://localhost:5173

# ==============================================
# SECURITY
# ==============================================
SECRET_KEY=your-secret-key-for-jwt
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_ANALYTICS=true
ENABLE_NEWSLETTER=true
ENABLE_STREAMING=true

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
# Uncomment for local development

# API_ENCRYPTION_ENABLED=false
# LOG_LEVEL=DEBUG
# CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ==============================================
# KEY GENERATION COMMANDS
# ==============================================
# Generate encryption key:
# python -c "import secrets; print(secrets.token_urlsafe(32))"

# Or using Node.js (to match frontend):
# node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"

# Or using OpenSSL:
# openssl rand -base64 32
